@{
        ViewData["Title"] = "Login Page";
}

<div>
    <h1>Welcome dear user</h1>
    <h2>Have a nice experience</h2>
</div>
<div>
    <div class="mask d-flex align-items-center h-100 gradient-custom-3" style="background: #84fab0; background: -webkit-linear-gradient(to right, rgba(132, 250, 176, 0.5), rgba(143, 211, 244, 0.5)); background: linear-gradient(to right, rgba(132, 250, 176, 0.5), rgba(143, 211, 244, 0.5));padding: 3%;">
        <div class="container" >
            <div class="row d-flex justify-content-center align-items-center " >
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5" style="color: DarkCyan ;">Please Log In</h2>

                            @using (Html.BeginForm("Login" , "User" , FormMethod.Post))
                            {
                            <div class="form-outline mb-2">
                                <input type="text" id="email" placeholder="Enter Your Name" name="Name" pattern="[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2, 4}$" class="form-control form-control-lg" required />
                                <label class="form-label" for="email"></label>
                            </div>

                            <div class="form-outline mb-0">
                            <input type="password" id="pass" name="Password" placeholder="Enter Your Password" class="form-control form-control-lg" required/>
                            <label class="form-label" for="pass"></label>
                            </div>
                            <div class="d-flex justify-content-center mb-3">
                                <button type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body "  style="background: #84fab0; background: -webkit-linear-gradient(to right, rgba(132, 250, 176, 1), rgba(143, 211, 244, 1)); background: linear-gradient(to right, rgba(132, 250, 176, 1), rgba(143, 211, 244, 1))">LOGIN</button>
                            </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
